<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10000" id="com.modemi4.safesteiermark" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Sichere Steiermark</name>
    <description>
        Die Steiermark sicherer machen – Angsträume entschärfen!
    </description>
    <author email="vasea.tshuh@gmail.com" href="https://www.sicherheit.st/">
        Vasyl Chukhilevych
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access launch-external="yes" origin="tel:*" />
    <access launch-external="yes" origin="mailto:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <icon src="www/res/icon.png" />
    <splash src="www/res/splash.png" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="scheme" value="app" />
    <preference name="hostname" value="localhost" />
</widget>
